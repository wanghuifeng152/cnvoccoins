<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:fitsSystemWindows="true"
        android:background="@color/color_zhuce"
        android:layout_width="match_parent"
        android:layout_height="23dp"/>
    <RelativeLayout
        android:background="@color/color_zhuce"
        android:gravity="center_vertical"
        android:id="@+id/ll_title"
        android:layout_height="50dp"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="10.5dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="18.5dp"
            android:src="@mipmap/sign_out"  />

        <TextView
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:text="设置密码"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

<TextView

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="验证码已经发送到您的手机"
    android:textSize="14sp"
    android:gravity="center"
    android:layout_marginTop="60dp"
    android:textColor="@color/chong_zhi"

    />

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_marginTop="6dp"
        android:textColor="@color/chong_zhi2"
        />

    <View
        android:background="@color/chong_zhi2"
        android:layout_gravity="center"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="16dp"
        android:layout_width="20dp"
        android:layout_height="4dp"/>

<TextView
    android:text="请输入验证码"
    android:gravity="center"
    android:id="@+id/tv_input"
    android:textSize="14sp"
    android:textColor="@color/chong_zhi"
    android:layout_marginTop="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

    <lsp.com.lib.PasswordInputEdt
        android:id="@+id/edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        app:rectChooseColor="@color/chong_zhi2"
        app:isPwd="false"
        app:textColor="@color/chong_zhi2"
        app:txtSize="20dp"
        app:rectStroke="1dip"
        android:layout_marginTop="30dip"/>

        <TextView
            android:id="@+id/te_number"
            android:layout_width="match_parent"
            android:text="sss"
            android:layout_marginTop="10dip"
            android:textColor="@color/color_c89158"
            android:gravity="center_horizontal"
            android:layout_height="wrap_content" />



</LinearLayout>