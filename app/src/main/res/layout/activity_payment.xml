<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#fff"
    android:id="@+id/relati"
    tools:context="voc.cn.cnvoccoin.activity.PaymentActivity">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true"
        android:layout_height="60dp">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="请输入支付密码"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="@color/color_454545"
                android:layout_width="wrap_content"
                android:layout_height="60dp" />
            <ImageView
                android:id="@+id/img_delete"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_gravity="center|right"
                android:layout_marginRight="40dp"
                android:src="@mipmap/delete_two"
                />
        </FrameLayout>
    </LinearLayout>
<View
    android:id="@+id/view_t"
    android:layout_centerHorizontal="true"
    android:layout_width="300dp"
    android:layout_height="0.5dp"
    android:layout_marginLeft="30dp"
    android:layout_below="@+id/linear"
    android:background="@color/color_8c"
    />
    <TextView
        android:id="@+id/text_tv"
        android:text="提现(VOC)"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/color_454545"
        android:layout_width="wrap_content"
        android:layout_below="@+id/view_t"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sum"
        android:layout_gravity="center"
        android:textColor="@color/color_c89158"
        android:text="*********"
        android:textSize="27sp"
        android:layout_below="@+id/text_tv"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />

    <voc.cn.cnvoccoin.view.PasswordInputEdt
        android:layout_below="@+id/tv_sum"
        android:layout_marginBottom="20dp"
        android:id="@+id/edt"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        app:rectChooseColor="@color/color_c89158"
        app:heightSpace="0dp"
        app:textColor="@color/chong_zhi2"
        app:txtSize="20dp"
        app:isPwd="true"
        app:widthSpace="0dp"
        app:rectStroke="0.5dp"
        android:layout_marginTop="30dp"/>
</RelativeLayout>
