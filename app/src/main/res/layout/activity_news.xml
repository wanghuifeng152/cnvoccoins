<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:scrollbars="none"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:id="@+id/xxcc"
            android:fitsSystemWindows="true"
            android:background="@color/color_zhuce"
            android:layout_width="match_parent"
            android:layout_height="23dp"/>
        <RelativeLayout
            android:layout_below="@id/xxcc"
            android:fitsSystemWindows="true"
            android:background="@color/color_zhuce"
            android:gravity="center_vertical"
            android:id="@+id/ll_title"
            android:layout_height="50dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="10.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18.5dp"
                android:src="@mipmap/sign_out" />

            <TextView
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:text="@string/news"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </RelativeLayout>
        <ProgressBar
            android:id="@+id/pb"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:max="100"
            android:layout_below="@id/ll_title"/>
        <TextView
            android:text="@string/newest_A"
            android:textSize="24sp"
            android:layout_marginLeft="17dp"
            android:gravity="center"
            android:textColor="@color/pai_huang"
            android:layout_width="wrap_content"
            android:layout_height="60dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="12.25dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <ImageView
                android:src="@mipmap/voice"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6.5dp"
                android:layout_width="11dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="@string/voice_coin"
                android:textColor="@color/color_9f7852" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/newest_A3"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/newest_A1"
                android:textColor="@color/color_888888"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/newest_A4"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/newest_A5"
                android:textSize="14sp"
                android:textColor="@color/color_888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


        <ImageView
            android:id="@+id/img1"
            android:layout_width="match_parent"
            android:layout_marginTop="31dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="31dp"
            android:src="@mipmap/picture"
            android:layout_height="280dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginBottom="12.25dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="20dp">
            <ImageView
                android:src="@mipmap/voc"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="6.5dp"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textSize="15sp"
                android:text="@string/task_coin"
                android:textColor="@color/color_9f7852" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/newest_A3"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/newest_A8"
                android:textColor="@color/color_888888"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content">
            <TextView
                android:text="@string/newest_A4"
                android:layout_marginLeft="20dp"
                android:textColor="@color/color_3A3A3A"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="@string/newest_A10"
                android:textSize="14sp"
                android:textColor="@color/color_888888"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <ImageView
            android:id="@+id/img2"
            android:layout_marginBottom="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="31dp"
            android:layout_marginRight="20dp"
            android:src="@mipmap/picture2"
            android:layout_width="match_parent"
            android:layout_height="280dp" />
    </LinearLayout>
</ScrollView>