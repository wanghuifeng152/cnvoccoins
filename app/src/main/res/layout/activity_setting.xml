<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical">
    <View
        android:id="@+id/view_p"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/color_zhuce"
        android:fitsSystemWindows="true" />

    <RelativeLayout
    android:layout_below="@+id/view_p"
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/color_zhuce"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_height="match_parent"
            android:layout_width="10.5dp"
            android:layout_marginLeft="18.5dp"
            android:src="@mipmap/sign_out" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="设置"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view_k"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:layout_below="@+id/ll_title"
        android:background="#F2F2F2"
        android:fitsSystemWindows="true" />

    <RelativeLayout
        android:id="@+id/rl_reset_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view_k"
        android:paddingBottom="10dip"
        android:background="@color/white"
        android:paddingRight="20dp"
        android:paddingTop="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="19dp"
            android:text="@string/reset_pwd"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/icon_next" />

    </RelativeLayout>

    <View
        android:id="@+id/view_tv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rl_reset_pwd"
        android:background="#D3D1CB" />
    <RelativeLayout
        android:id="@+id/relat_two"
        android:layout_below="@id/view_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dip"
        android:background="@color/white"
        android:paddingRight="20dp"
        android:paddingTop="12dp"
        >

        <TextView
            android:id="@+id/text_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="19dp"

            android:text="版本号"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/text_b"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19dp"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>




    <TextView
        android:id="@+id/sign"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="3dp"
        android:background="#f20707"
        android:gravity="center"
        android:text="退出登录"
        android:textColor="#fff"
        android:visibility="gone" />
    <ProgressBar
        android:id="@+id/processBasr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/color_c89158"
        android:visibility="gone" />


</RelativeLayout>