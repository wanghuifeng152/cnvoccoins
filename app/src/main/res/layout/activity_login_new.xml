<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/color_zhuce">

    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="150dp">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:paddingLeft="15dp"
            android:src="@mipmap/arrow" />
        <RelativeLayout
            android:id="@+id/re"
            android:layout_width="match_parent"
            android:layout_below="@id/iv_back"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/tv_login"
                android:text="登录"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="50dp"
                android:textColor="#f6d89f"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/lin"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:text="还没有账号去注册"
                android:gravity="center"
                android:textSize="13sp"
                android:layout_alignParentRight="true"
                android:textColor="#f0eadf"
                android:layout_marginRight="60dp"
                />
            <ImageView
                android:layout_alignParentRight="true"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginRight="44dp"
                android:layout_marginTop="36dp"
                android:src="@mipmap/return_one"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_below="@id/re"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:gravity="bottom">
            <ImageView
                android:id="@+id/image_v"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/return_two"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                />

            <TextView
                android:id="@+id/tv_tel_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="+86"
                android:textColor="#f6d89f"
                android:layout_toRightOf="@+id/image_v"
                android:textSize="20sp" />

            <View
                android:id="@+id/line"
                android:layout_width="1dp"
                android:layout_height="24dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/tv_tel_begin"
                android:background="#58422d"
                />

            <EditText
                android:id="@+id/et_login_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@+id/line"
                android:background="@android:color/transparent"
                android:hint="请输入手机号"
                android:maxLength="11"
                android:singleLine="true"
                android:textColor="#c89158"
                android:textColorHint="#f6d89f"
                android:textSize="18sp"
                />
        </RelativeLayout>
    </RelativeLayout>
    <ImageView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/rl_top"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:src="@mipmap/lll"

        />

    <EditText
        android:id="@+id/et_login_pwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="40dp"
        android:layout_marginLeft="40dp"
        android:layout_below="@+id/line1"
        android:layout_marginTop="30dp"
        android:password="true"
        android:singleLine="true"
        android:background="@android:color/transparent"
        android:hint="请输入登录密码"
        android:textColor="#c89158"
        android:textColorHint="#f6d89f"
        android:textSize="18sp" />

    <ImageView

        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/et_login_pwd"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="5dp"
        android:src="@mipmap/lll"

        />

    <TextView
        android:id="@+id/tv_infomation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/line2"
        android:layout_marginLeft="50dp"
        android:text="切换到验证码登录"
        android:textColor="#f0eadf"
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textSize="13sp" />



    <Button
        android:id="@+id/btn_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="54dp"
        android:text="登录"
        android:background="@drawable/bg_task_button"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_regist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_commit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_horizontal"
        android:text="如忘记密码，请联系官方客服帮忙解决"
        android:textColor="#a39f99"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/tv_d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:textSize="10dp"
        android:text="请务必牢记账号和密码否则将无法找回账户与挖币数据"
        android:textColor="#d5d5d5" />


</RelativeLayout>
