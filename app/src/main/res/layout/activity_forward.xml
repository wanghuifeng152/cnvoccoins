<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
  >

    <RelativeLayout
        android:background="#000"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/address_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:src="@mipmap/back" />
        <TextView
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="提现"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="8dp"
            android:text="提现地址"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="10dp"
            android:layout_height="0.1dp" />

        <EditText
            android:maxLength="42"
            android:id="@+id/address_remarks"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="提现钱包地址"
            android:textSize="12dp" />
        <ImageView
            android:id="@+id/ic_choice"
            android:src="@mipmap/choice"
            android:layout_marginRight="15dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />


    </LinearLayout>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#cbcbcb"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <TextView
            android:textColor="#000"
            android:layout_marginLeft="8dp"
            android:text="提现数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="10dp"
            android:layout_height="0.1dp" />
        <EditText
            android:id="@+id/address_snmd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:hint="最小数量3500"
            android:textSize="12dp"
            android:inputType="number"/>
    </LinearLayout>
    <View
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="#cbcbcb"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#989898"
            android:text="可提现："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_txian"
            android:layout_width="wrap_content"
            android:text="0"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_qub"
            android:layout_marginLeft="3dp"
            android:textColor="#00c8ff"
            android:text="全部提现"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:textColor="#000"
            android:text="手续费："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_charge"
            android:textColor="@color/color_c89158"
            android:text="0voc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:paddingLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="30dp">
        <TextView
            android:textColor="#000"
            android:text="实际到账："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_assets"
            android:textColor="@color/color_c89158"
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:enabled="false"
        android:id="@+id/address_confirm"
        android:textColor="#fff"
        android:text="确定"
        android:textSize="15sp"
        android:background="@drawable/btn_tach"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="50dp" />
    <TextView
        android:id="@+id/tv_address"
        android:textColor="@color/color_BF986F"
        android:layout_gravity="center_horizontal"
        android:text="没有提现地址？"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>