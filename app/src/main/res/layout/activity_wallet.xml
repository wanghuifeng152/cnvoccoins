<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_zhuce"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <RelativeLayout
            android:id="@+id/ll_title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="10.5dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18.5dp"
                android:src="@mipmap/sign_out" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/mingxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="12dp"
                android:layout_marginRight="12dp"
                android:text="@string/Ming_Xi"
                android:textColor="@color/white"
                android:visibility="gone" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="35.5dp"
                    android:layout_height="38.5dp"
                    android:layout_marginLeft="42dp"
                    android:layout_marginTop="10dip"
                    android:src="@mipmap/zichan" />

                <TextView
                    android:layout_width="93.5dp"
                    android:layout_height="22.5dp"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="16dp"
                    android:text="总资产(VOC)"
                    android:textColor="@color/color_zichan2"
                    android:textSize="16dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_coin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="8.5dp"
                android:text="0.00"
                android:textColor="@color/color_zichan"
                android:textSize="50sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_zichan5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41dp"
                    android:layout_marginRight="133dp"
                    android:layout_marginTop="20dp"
                    android:text="可提现数额"
                    android:textColor="@color/color_zichan3"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/wallet_tixian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="0.00"
                    android:textColor="@color/color_zichan3"
                    android:textSize="15sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="31.5dp"
                android:layout_marginRight="33dp"
                android:layout_marginTop="19dp"
                android:background="@color/color_zichan4" />

            <LinearLayout
                android:id="@+id/suo_ding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18.5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="41dp"
                    android:text="锁定数额"
                    android:textColor="@color/color_zichan3"
                    android:textSize="15dp" />

                <ImageView
                    android:layout_width="16.5dp"
                    android:layout_height="16.5dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginRight="124dp"
                    android:src="@mipmap/wenhao" />


                <TextView
                    android:id="@+id/wallet_suoding"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0.00"
                    android:textColor="@color/color_zichan3" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="41dp"
                android:layout_marginTop="10.5dp"
                android:text="@string/dang_ri"
                android:textColor="@color/color_zichan6" />

            <LinearLayout
                android:id="@+id/tixian_guize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="134.5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="提现规则"
                        android:textColor="@color/color_zichan3"
                        android:textSize="12sp" />

                    <ImageView
                        android:layout_width="12.5dp"
                        android:layout_height="12.5dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:src="@mipmap/wenti" />
                </LinearLayout>

                <View
                    android:layout_width="75dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:background="@color/color_zichan3" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forward"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:background="@mipmap/beijing"
                android:gravity="center"
                android:text="提现"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </LinearLayout>


        <ProgressBar
            android:id="@+id/processBasr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateTint="@color/color_c89158"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>