<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="184.5dp"
    android:layout_marginLeft="35.5dp"
    android:layout_marginRight="35.5dp"
    android:background="@drawable/bg_white"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="锁定说明"
                android:textColor="@color/light_black"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/guanbi"
                android:layout_width="20dp"
                android:layout_marginTop="10dp"
                android:layout_height="20dp"
                android:layout_gravity="right|center"
                android:layout_marginRight="28.5dp"
                android:src="@mipmap/icon_down" />
        </FrameLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="17dp"
        android:background="@color/color_FFC3C1C1" />

    <TextView
        android:id="@+id/wallet_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="41.5dp"
        android:layout_marginRight="39.5dp"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:textColor="@color/light_black"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/wallet2_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="41.5dp"
        android:layout_marginRight="39.5dp"
        android:gravity="center"
        android:textColor="@color/light_black"
        android:textSize="16dp" />
</LinearLayout>